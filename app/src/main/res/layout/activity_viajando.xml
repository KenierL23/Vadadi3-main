<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Viajando">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="430dp"
        android:layout_height="78dp"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageButton
        android:id="@+id/Botonmiperfil"
        android:layout_width="106dp"
        android:layout_height="114dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="345dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitEnd"
        android:src="@drawable/cargando" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginTop="140dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/vadadi_png" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/botonVolver2"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            app:icon="@drawable/atras"
            app:iconTint="#FF990D" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text="@string/vadadi"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#FF990D"
            android:textSize="26sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="480dp"
        android:text="Solicitando   servicio..."
        android:textSize="24sp" />

</FrameLayout>